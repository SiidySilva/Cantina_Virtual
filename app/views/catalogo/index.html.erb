    <!-- *** HOT PRODUCT SLIDESHOW ***
_________________________________________________________ -->
    <div id="hot">
      <div class="box">
        <div class="container">
          <div class="col-md-12">
            <h2>Produtos</h2>
          </div>
        </div>
      </div>

      <% if flash[:notProduto] %>
        <div class="alert alert-danger text-center"><%= flash[:notProduto] %></div>
      <% end %>

      <div class="container">
        <div class="product-slider">
          <% @produtos.each do |produto| %>

            <div class="item">
              <div class="product">
                <div class="flip-container">
                  <div class="flipper">
                    <div class="front">
                      <% if produto.image.attached? %>
                        <%= link_to catalogo_detalhes_path(produto) do %>
                          <%= image_tag produto.image, class: "img-responsive" %>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="back">
                      <% if produto.image.attached? %>
                        <%= link_to catalogo_detalhes_path(produto) do %>
                          <%= image_tag produto.image, class: "img-responsive" %>
                        <% end %>
                      <% end %>

                    </div>
                  </div>
                </div>
                <% if produto.image.attached? %>
                  <%= link_to catalogo_detalhes_path(produto) do %>
                    <%= image_tag produto.image, class: "img-responsive" %>
                  <% end %>
                <% end %>
                <div class="text">
                  <h3><%= link_to produto.nome_produto, catalogo_detalhes_path(produto) %></h3>
                  <p class="price">R$: <%= produto.preco_produto %></p>
                </div>
                <!-- /.text -->
              </div>
              <!-- /.product -->
            </div>
          <% end %>
        </div>
        <!-- /.product-slider -->
      </div>
      <!-- /.container -->

    </div>
    <!-- /#hot -->

    <!-- *** HOT END *** -->

  </div>
  <!-- /#content -->
</div>
