<%#= link_to 'New Pedido', new_pedido_path %>

<%= render 'layouts/sidebar_cliente' %>

<div class="col-md-9" id="customer-orders">
  <div class="box">
    <h1>Meus Pedidos</h1>

    <p class="lead">Seus pedidos em um só lugar.</p>
    <p class="text-muted">Todos os seus pedidos são listados aqui clique em ver para mais informações sobre o pedido.</p>

    <hr>

    <div class="table-responsive">
      <table class="table table-hover">
        <thead>

        <tr>
          <th>Pedido</th>
          <th>Data</th>
          <th>Total</th>
          <th>Status</th>
          <th>Ação</th>
        </tr>

        </thead>
        <tbody>
        <% @pedidos_cliente.each do |pedido| %>
        <tr>
          <th># <%= pedido.id %></th>
          <td><%= pedido.created_at.to_time.strftime("%m/%d/%Y") %></td>
          <td>RS: <%=pedido.total_pedido %></td>
          <% if pedido.status_pedido == "Pedido enviado"then @label = "label-info"end%>
          <% if pedido.status_pedido == "Pedido em andamento"then @label = "label-warning"end%>
          <% if pedido.status_pedido == "Pedido concluido"then @label = "label-success"end%>
          <% if pedido.status_pedido == "Pedido cancelado"then @label = "label-danger"end%>
          <td><span class="label <%=@label %> "><%=pedido.status_pedido %></span>
          </td>
          <td>
            <%= link_to 'Ver', pedido , class: "btn btn-primary btn-sm"%>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
